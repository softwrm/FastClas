<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fastclasbg"
    android:orientation="vertical"
    tools:context="com.versatile.fastclas.activities.RegisterActivity">

    <include layout="@layout/toolbar1" />

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_medium_15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtFirstname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_xmedium_20dp"
                android:background="@drawable/edittext_bg"
                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:drawableLeft="@drawable/fastclasusericon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:hint="@string/firstname"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/edtLastname"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:drawableLeft="@drawable/fastclasusericon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:hint="@string/lastname"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/edtGender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/gendericon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:drawableRight="@drawable/dropdownicon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/gender"
                android:longClickable="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp" />

            <EditText
                android:id="@+id/edtPhoneno"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:digits="1234567890"
                android:drawableLeft="@drawable/phonenumbericon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:hint="@string/phoneno"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:drawableLeft="@drawable/emailicon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp"
                android:imeOptions="actionNext"/>

            <EditText
                android:id="@+id/edtState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/stateicon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:drawableRight="@drawable/dropdownicon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/state"
                android:longClickable="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp" />

            <EditText
                android:id="@+id/edtUniversity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/universityicon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:drawableRight="@drawable/dropdownicon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/university"
                android:longClickable="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp" />

            <EditText
                android:id="@+id/edtCourse"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/courseicon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:drawableRight="@drawable/dropdownicon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/course"
                android:longClickable="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp" />

            <EditText
                android:id="@+id/edtSemester"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_5xlarge_50dp"
                android:layout_marginTop="@dimen/space_small_10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:drawableLeft="@drawable/semestericon"
                android:drawablePadding="@dimen/space_vsmall_5dp"
                android:drawableRight="@drawable/dropdownicon"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/semester"
                android:longClickable="false"
                android:maxLines="1"
                android:paddingLeft="@dimen/space_small_10dp"
                android:paddingRight="@dimen/space_small_10dp"
                android:singleLine="true"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_silver"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/text_xmedium_16sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/space_large_25dp"
                android:layout_marginTop="@dimen/space_xlarge_30dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_xmedium_16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
