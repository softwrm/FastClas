<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/app_name"
            android:textColor="@color/color_blue"
            android:textSize="@dimen/text_large_18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_blue" />

        <TextView
            android:id="@+id/txtMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/space_xmedium_20dp"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_xmedium_16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_small_10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_xxxlarge_40dp"
                android:layout_marginLeft="@dimen/space_xlarge_30dp"
                android:layout_marginRight="@dimen/space_xlarge_30dp"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium_14sp" />

            <TextView
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_xxxlarge_40dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_xlarge_30dp"
                android:layout_marginRight="@dimen/space_xlarge_30dp"
                android:layout_weight="1"
                android:background="@color/color_blue"
                android:gravity="center"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_medium_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>