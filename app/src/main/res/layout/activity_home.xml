<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_home" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/brown_light"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_small_10dp"
                        android:layout_marginRight="@dimen/space_small_10dp"
                        android:layout_marginTop="@dimen/space_vsmall_5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="@string/courses"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_large_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="@dimen/space_vsmall_5dp"
                            android:layout_marginStart="@dimen/space_vsmall_5dp"
                            android:layout_toEndOf="@+id/txtSubject"
                            android:layout_toRightOf="@+id/txtSubject"
                            android:maxLines="1"
                            android:text="@string/bsc_program"
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/text_large_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtSubject"
                            android:maxLines="1"
                            android:text="@string/semesters"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_large_18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSemester"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtCourse"
                            android:layout_marginLeft="@dimen/space_vsmall_5dp"
                            android:layout_marginStart="@dimen/space_vsmall_5dp"
                            android:layout_toEndOf="@+id/txtSem"
                            android:layout_toRightOf="@+id/txtSem"
                            android:gravity="end"
                            android:padding="1dp"
                            android:text="@string/semester_i"
                            android:textColor="@color/color_blue"
                            android:textSize="@dimen/text_large_18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <!--     <TextView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="@dimen/space_small_10dp"
                             android:gravity="center"
                             android:text="@string/note_without_pay_you_will_be_able_to_access_only_3_sessions"
                             android:textColor="@color/color_red"
                             android:textSize="@dimen/text_small_12sp" />-->

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_vsmall_5dp"
                    android:fontFamily="@font/abeezee"
                    android:gravity="center"
                    android:text="@string/subject"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/text_xlarge_20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtxNoDataFound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xlarge_30dp"
                    android:gravity="center"
                    android:text="@string/no_data_found"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_medium_14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_small_10dp"
                    android:layout_marginRight="@dimen/space_small_10dp"
                    android:layout_marginTop="@dimen/space_small_10dp"
                    android:overScrollMode="never"
                    android:scrollIndicators="none"
                    android:scrollbars="none" />

            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/color_white"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/color_blue"
        app:itemTextColor="@color/color_black"
        app:menu="@menu/menu_home" />

</android.support.v4.widget.DrawerLayout>
