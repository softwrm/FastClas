<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_vsmall_5dp"
    android:layout_marginRight="@dimen/space_vsmall_5dp"
    android:layout_marginTop="@dimen/space_vsmall_5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtDashboardUniversity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/university_icon"
        android:drawablePadding="@dimen/space_small_10dp"
        android:drawableStart="@drawable/university_icon"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:padding="@dimen/space_vsmall_5dp"
        android:textColor="@color/color_white" />
</LinearLayout>