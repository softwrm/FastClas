<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_small_10dp"
    android:orientation="vertical">

    <TextView
        android:text="zdgbdfbhfgbgfn"
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:layout_marginBottom="@dimen/space_vsmall_5dp"/>

    <TextView
        android:id="@+id/textReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_more"
        android:textColor="@color/color_blue"
        android:layout_marginBottom="@dimen/space_vsmall_5dp"
        android:layout_gravity="right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgYoutube"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_20xlarge_200dp"
            android:src="@drawable/video_image1"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/watched"
            android:textSize="@dimen/text_medium_14sp"
            android:textColor="@color/color_white"
            android:paddingTop="@dimen/space_medium_15dp"
            android:paddingLeft="@dimen/space_small_10dp"
            android:paddingRight="@dimen/space_small_10dp"
            android:background="@color/gray"/>

        <ImageButton
            android:id="@+id/imgWatchReplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/replay_icon"
            android:background="@android:color/transparent"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>