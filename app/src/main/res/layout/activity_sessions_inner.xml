<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar1"
        layout="@layout/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/toolbarStyle"
        android:layout_alignParentTop="true" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl"
        android:layout_below="@+id/toolbar1"
        android:overScrollMode="never"
        android:scrollbars="none">


        <!--      <android.support.v7.widget.RecyclerView
                  android:id="@+id/recyclerView"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:overScrollMode="never"
                  android:scrollIndicators="none"
                  android:scrollbars="none"
                  android:layout_marginBottom="@dimen/space_6xlarge_60dp"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:padding="@dimen/_8dp">

            <TextView
                android:id="@+id/textTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:text="@string/read_more"
                android:textColor="@color/color_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgYoutube"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_20xlarge_200dp"
                    android:contentDescription="@string/thumbnail"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:paddingLeft="@dimen/space_small_10dp"
                    android:paddingRight="@dimen/space_small_10dp"
                    android:paddingTop="@dimen/space_medium_15dp"
                    android:text="@string/watched"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium_14sp" />

                <ImageView
                    android:id="@+id/imgButton"
                    android:layout_width="@dimen/space_10xlarge_100dp"
                    android:layout_height="@dimen/space_10xlarge_100dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/play"
                    android:src="@drawable/play_icon" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_tiny_2dp"
                android:layout_marginBottom="@dimen/space_medium_15dp"
                android:layout_marginTop="@dimen/space_medium_15dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/textTitle6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textTitle10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/textReadMore2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/space_vsmall_5dp"
                android:text="@string/read_more"
                android:textColor="@color/color_blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgYoutube2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_20xlarge_200dp"
                    android:contentDescription="@string/thumbnail"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/textStatus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:paddingLeft="@dimen/space_small_10dp"
                    android:paddingRight="@dimen/space_small_10dp"
                    android:paddingTop="@dimen/space_medium_15dp"
                    android:text="@string/watched"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/text_medium_14sp" />

                <ImageView
                    android:id="@+id/imgButton2"
                    android:layout_width="@dimen/space_10xlarge_100dp"
                    android:layout_height="@dimen/space_10xlarge_100dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/play"
                    android:src="@drawable/play_icon" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_8dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/space_small_10dp"
            android:layout_marginTop="@dimen/space_vsmall_5dp"
            android:background="@color/color_blue" />

        <TextView
            android:id="@+id/txtPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/space_xmedium_20dp"
            android:drawableLeft="@drawable/previous_icon"
            android:drawablePadding="@dimen/space_vsmall_5dp"
            android:drawableStart="@drawable/previous_icon"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/previous"
            android:textColor="@color/color_ash" />

        <ImageButton
            android:id="@+id/imgOpenDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/space_xmedium_20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/bottom_button"
            android:src="@drawable/add_button_icon" />

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/space_xmedium_20dp"
            android:drawableEnd="@drawable/next_icon"
            android:drawablePadding="@dimen/space_vsmall_5dp"
            android:drawableRight="@drawable/next_icon"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/color_blue" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtxNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/no_data_found"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_xmedium_16sp"
        android:visibility="gone" />
</RelativeLayout>