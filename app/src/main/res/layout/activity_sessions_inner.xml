<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown_light"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_medium_15dp"
            android:background="@drawable/cardview_bg"
            android:elevation="@dimen/space_vsmall_5dp"
            android:orientation="vertical"
            android:padding="@dimen/space_medium_15dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollIndicators="none"
                android:scrollbars="none"
                android:layout_marginBottom="@dimen/space_6xlarge_60dp"/>

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_blue"
                    android:layout_marginTop="@dimen/space_vsmall_5dp"
                    android:layout_marginBottom="@dimen/space_small_10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/previous"
                    android:layout_marginTop="@dimen/space_xmedium_20dp"
                    android:textColor="@color/color_blue"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:drawableLeft="@drawable/previous_icon"
                    android:drawablePadding="@dimen/space_vsmall_5dp"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/imgOpenDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_button_icon"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="@dimen/space_xmedium_20dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/next"
                    android:layout_marginTop="@dimen/space_xmedium_20dp"
                    android:textColor="@color/color_ash"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/next_icon"
                    android:drawablePadding="@dimen/space_vsmall_5dp"
                    android:gravity="center"/>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>