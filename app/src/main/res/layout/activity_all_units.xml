<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fastclasbg"
    android:orientation="vertical">

    <include layout="@layout/toolbar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brown_light"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_small_10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_medium_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_small_10dp"
                android:gravity="end"
                android:text="@string/buy_subject"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_medium_14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtxNoDataFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_xlarge_30dp"
            android:gravity="center"
            android:text="@string/no_data_found"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_medium_14sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_small_10dp"
            android:layout_marginRight="@dimen/space_small_10dp"
            android:layout_marginTop="@dimen/space_small_10dp"
            android:overScrollMode="never"
            android:scrollbars="none" />

    </LinearLayout>
</LinearLayout>