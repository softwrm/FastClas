<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_small_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_small_10dp"
        android:background="@drawable/dialog_sessions_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textDiscussionForum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/discussion_forum_icon"
            android:drawablePadding="@dimen/space_small_10dp"
            android:text="@string/discussion_forum"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_xmedium_16sp"
            android:padding="@dimen/space_small_10dp"/>

       <!-- <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl1"
            android:layout_marginBottom="@dimen/space_vsmall_5dp"
            android:layout_marginTop="@dimen/space_vsmall_5dp"
            android:background="@color/color_blue" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/textCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_sessions_bg"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_xlarge_20sp"
        android:padding="@dimen/space_small_10dp"/>

</LinearLayout>